{
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "dependencies",
    "renovate"
  ],
  "timezone": "UTC",
  "prConcurrentLimit": 6,
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^environment\\.yml$/"
      ],
      "matchStrings": [
        "-\\s*(?:[^:\\s]+::)?([^=\\s]+)=([^\\s]+)"
      ],
      "depNameTemplate": "$1",
      "packageNameTemplate": "$1",
      "currentValueTemplate": "$2",
      "datasourceTemplate": "conda",
      "versioningTemplate": "conda"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^environment\\.yml$/"
      ],
      "matchStrings": [
        "-\\s*([^=\\s]+)==([^\\s]+)"
      ],
      "depNameTemplate": "$1",
      "packageNameTemplate": "$1",
      "currentValueTemplate": "$2",
      "datasourceTemplate": "pypi",
      "versioningTemplate": "pep440"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "conda"
      ],
      "groupName": "conda dependencies",
      "schedule": [
        "before 5am on saturday"
      ],
      "automerge": false
    },
    {
      "matchDatasources": [
        "pypi"
      ],
      "groupName": "pip dependencies",
      "schedule": [
        "before 6am on sunday"
      ],
      "automerge": false
    },
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true,
      "automergeType": "pr"
    }
  ]
}
