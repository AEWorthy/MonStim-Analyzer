# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# Configuration files
[*.{cfg,ini,toml}]
indent_style = space
indent_size = 4

# Web files
[*.{html,css,js}]
indent_style = space
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2

# Windows batch files
[*.{bat,cmd}]
end_of_line = crlf
indent_style = space
indent_size = 2

# PowerShell files
[*.ps1]
end_of_line = crlf
indent_style = space
indent_size = 4

# Makefiles (require tabs)
[{Makefile,makefile,*.mk}]
indent_style = tab
indent_size = 4

# ReStructuredText files
[*.rst]
indent_style = space
indent_size = 3
max_line_length = 79

# AsciiDoc files
[*.adoc]
indent_style = space
indent_size = 2
max_line_length = 80

# License files
[LICENSE*]
max_line_length = off

# Package configuration
[setup.py]
indent_style = space
indent_size = 4

# Requirements files
[requirements*.txt]
indent_style = space
indent_size = 0

# PyInstaller spec files
[*.spec]
indent_style = space
indent_size = 4
